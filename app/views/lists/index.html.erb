<h1>All Lists</h1>
<%= link_to '+ Add a new list', new_list_path %>

<div class='container'>
  <% @lists.each do |item| %>
  <ul>
    <li>
    <%= link_to item.name, list_path(item)%>
      <%if item.photo.attached? %>
        <%= cl_image_tag item.photo.key, height: 400, width: 500 %>
      <%end%>
    <%= link_to "Delete", list_path(item), data: {turbo_method: :delete, turbo_confirm: 'Are you sure ?'}%>
    </li>
  </ul>
  <%end%>
</div>
